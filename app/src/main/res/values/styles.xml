    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.TextView.Small">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="AppTheme.TextView.Large">
