    <style name="AppTheme_Medium" parent="Theme.HearMe">
        <item name="android:textSize">16sp</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <!-- ⭐️ ADD THIS LINE ⭐️ -->
        <item name="navBarTextViewStyle">@style/AppTheme.TextView.XSmall</item>
    </style>

    <style name="AppTheme_Small" parent="AppTheme_Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView.Small</item>
        <item name="android:buttonStyle">@style/AppTheme.Button.Small</item>
