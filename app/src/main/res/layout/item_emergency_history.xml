<?xml version="1.0" encoding="utf-8"?>
<!-- file: item_emergency_history.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_emergency_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kecemasan"
            android:textColor="#D32F2F"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_emergency_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Butiran lokasi dan mesej..."
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_emergency_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:text="01 Nov 2025, 10:30 AM"
            android:textColor="#999999"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>